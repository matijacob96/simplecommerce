{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Depurar ESLint",
      "program": "${workspaceFolder}/node_modules/eslint/bin/eslint.js",
      "args": ["--debug", "--no-eslintrc", "--no-error-on-unmatched-pattern", "${file}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
} 